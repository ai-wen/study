    "version": "0.2.0",
    "configurations": [
        {
          "name": "(Windows) Launch",
          "type": "cppvsdbg",
          "request": "launch",
          "preLaunchTask": "build",
          "program": "${workspaceFolder}/debug/CppVSCodeConsole.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true
        },
        {
            "name": "(gdb)cpp_launch",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "x86_64",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}.exe",
            "miDebuggerPath": "D:/mingw64/bin/gdb.exe",
            "MIMode": "gdb",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "internalConsoleOptions": "openOnFirstSessionStart",
            "externalConsole": false,
            "preLaunchTask": "g++_task",
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
              ]
        }
    ]
}